@model ForumDemo.ViewModels.NewPostModel
@{
    ViewData["Title"] = "Create";
}

<h2>New Post-  @Model.ForumName</h2>

<form asp-action="Create" method="post" id="addPostForm">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    
    <div class="form-group" >
        <label asp-for="Content"></label>
        <input asp-for="Content" class="form-control" />
    </div>
    <button type ="submit" id="submitPostBtn" class="btn btn-submitPost">Submit Post</button>

    <input asp-for="ForumId" type="hidden" />


</form>